/*
 * Parameters
 */
@color_beige: #f9f6e1;
@color_gold: #D8C568;
@color_grey: #CCCCCC;
@color_fairly_black: #2C2C2C;
@color_almost_black: #010101;
@color_pantheon_black: #222222;
@color_black_1: rgba(0, 0, 0, 1.0);
@color_black_trans: rgba(0, 0, 0, 0.5);

/*
 * Minimum widths
 */
.min-width {
	min-width: 1024px;
}

/*
 * Mixins
 */
.opacity(@trans) {
    // -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=#{@trans * 100})";
    // filter: alpha(opacity=#{@trans * 100});
    -moz-opacity: @trans;
    -khtml-opacity: @trans;
    opacity: @trans;
}

.grayscale(@value: 1) {
	-webkit-filter: grayscale(@value);
	-moz-filter: grayscale(@value);
	-o-filter: grayscale(@value);
	-ms-filter: grayscale(@value);
	filter: grayscale(@value);
}

*, *:before, *:after {
	-moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
}

.transition(@property, @duration, @timing-function) {
	-webkit-transition: @property @duration @timing-function;
	-moz-transition: @property @duration @timing-function;
	-o-transition: @property @duration @timing-function;
	transition: @property @duration @timing-function;
}

.color-transition {
	.transition(color, 0.2s, ease-in);
}

.border-transition {
	.transition(border, 0.2s, ease-in);
}

html, body { 
	height: 100%; 
	background-color: @color_beige;
}

body { 
	overflow-x: hidden;
	overflow-y: scroll; 
}

// Overrride bootstrap behavior
@media (max-width: 767px) {
	body { padding: 0; }
}

// Necessary for the footer
div.wrapper { 
	min-height: 100%; 

	&#background-wrapper {
		background-color: @color_beige;
		z-index: 10;
		position: relative;

		&.mobile {
			padding-bottom: 15px;
		}
	}
}

.fade {
	transition: opacity .15s ease-in-out;
	-moz-transition: opacity .15s ease-in-out;
	-webkit-transition: opacity .15s ease-in-out;
}

.no-select {
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	cursor: default;
}

.fixed {
	position: fixed !important; 
}

.loading {
	height: 100px;
	width: 100px;
	margin: auto auto;
}

.trans-bg {
	background-color: @color_black_trans;
}

select {
	font-family: 'Lato';
	background: transparent;
    -webkit-appearance: none;
    line-height: 16px;
    border: 1px solid @color_pantheon_black;
    height: 25px;
    border-radius: 2px;
    width: 100%;
    color: @color_pantheon_black;
    text-align: center;
    font-weight: 300;
    &:focus {
    	outline: none;
    }
}

body {
