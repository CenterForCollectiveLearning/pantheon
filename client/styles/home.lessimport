.narrative-image{
	position: relative;
}

.main-panel{
	margin-bottom: 20px;
}

.flexslider{
	margin: 0 !important;
}

div.page-title {
	background-color: @color_pantheon_black;
	color: @color_beige;
	text-transform: uppercase;
	height: 50px;
	line-height: 70px;
	font-size: 18px;
	padding-left: 6px;
}

div.description {
	padding: 10px 8px;
	font-size: 16px;
	a {
		font-weight: bold;
		text-decoration: none;
		color: @color_pantheon_black;
		&:hover {
 			text-decoration:underline;
 		}
	}

	&.black-border-bottom {
		border-bottom: 1px solid @color_pantheon_black;
	}
}

#divein, .learn-more{
	cursor: pointer;
}

div.landing-section-button {
	background-color: white;
	color: @color_pantheon_black;
	text-transform: uppercase;
	height: 50px;
	line-height: 50px;
	font-size: 18px;
	text-align: center;
	cursor: pointer;
	position: relative;
}

