ol.flex-control-nav {
	z-index: 100;
	bottom: 5px;
	text-align: center;
	padding-right: 4px;

	li {
		&:hover {
			color: @color_gold;
		}

		a {
			color: transparent
		}
	}

	li a {
		background-color: @color_grey;
		&:hover{
			background-color: white; 
		}
		&.flex-active {
			zoom: 1;
			background-color: @color_beige;
		}

		border-radius: 7px;
		-webkit-border-radius: 7px;
		-moz-border-radius: 7px;
		-o-border-radius: 7px;
		display: block;
		border: 0px solid @color_beige;
		margin: 0 2px;
		height: 10px;
		width: 10px;
		text-indent: -9999px;
		cursor: pointer;
		zoom: 1;
	}
}

ul.flex-direction-nav {
	a {
		position: absolute;
		top: 0;
		height: 100%;
		background: transparent;
		z-index: 10;
		width: 12%;
		text-indent: 100%;
		overflow: hidden;
		white-space: nowrap;
		color: transparent;
		outline: 0;

		&.flex-prev { left: 0 }
		&.flex-next { right: 0 }
	}
}

