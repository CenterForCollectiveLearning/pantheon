// Table
div#ranking_wrapper {
	div.dataTables_length {
		margin-top: 5px;
		width: initial;

		div.chosen-container {
			position: relative;
		    margin: 0 5px;
			width: 55px !important;
		}
	}
	div.dataTables_filter {
		width: initial;

		label {
			input {
				margin-top: 5px;
				border-radius: 1px;

				&:focus {
					border-color: @color_gold;
					-webkit-box-shadow: none;
					-moz-box-shadow: none;
					box-shadow: none;					
				}
			}
		}
	}
	div.dataTables_paginate {
		a#ranking_next {
			padding-right: 0
		}
	}
}

div.column-descriptions {
	div.term {
		font-weight: 500;
		margin-button: 0.2rem;
	}
	div.definition {
		margin-bottom: 1rem;
		text-align: justify;
	}
}

table {
	background-color: rgba(0, 0, 0, 0.75);
	thead{
		background-color: @color_beige;
	}
	tbody {
		tr {
			&.odd {
				background-color: #F9F2C2; // slightly more saturated, same beige
			}
			&.even {
				background-color: @color_beige;
			}
			td {
				color: black;
				font-size: 0.7rem;
				padding: 6px 10px;

				overflow: hidden;
				white-space: nowrap;
				text-overflow: ellipsis;
				-o-text-overflow: ellipsis;

				a {
					color: black;
					font-weight: 500;
					&:hover { 
						color: black;
					}
				}
			}
		}
	}
}