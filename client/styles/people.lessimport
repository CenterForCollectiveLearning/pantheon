//
// People page
//

div.person-page {
    width: 640px;
    min-width: 640px;
    margin: 0 auto;
}

div.search-result {
    background-color: @color_pantheon_black;
    color: @color_beige;
    font-family: 'Lato';
    font-weight: 300;
    text-align: left;
}

.-autocomplete-list {
    list-style: none;
    margin: 0;
    padding: 0;
}

.-autocomplete-item {
    display: block;
    background: @color_pantheon_black;
}

.-autocomplete-item.selected {
    background: @color_beige;
    color: @color_pantheon_black;
    text-decoration: none;
}

